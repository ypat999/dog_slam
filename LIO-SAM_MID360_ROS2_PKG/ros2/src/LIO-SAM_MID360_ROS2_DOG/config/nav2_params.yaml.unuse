amcl:
  ros__parameters:
    use_sim_time: true
    alpha1: 0.2
    alpha2: 0.2
    alpha3: 0.2
    alpha4: 0.2
    alpha5: 0.2
    base_frame_id: "base_footprint"
    beam_skip_distance: 0.5
    beam_skip_error_threshold: 0.9
    beam_skip_threshold: 0.3
    do_beamskip: false
    global_frame_id: "map"
    lambda_short: 0.1
    laser_likelihood_max_dist: 2.0
    laser_max_range: 100.0
    laser_min_range: 0.0
    laser_model_type: "likelihood_field"
    max_beams: 60
    max_particles: 4000
    min_particles: 500
    odom_frame_id: "odom"
    pf_err: 0.05
    pf_z: 0.99
    recovery_alpha_fast: 0.0
    recovery_alpha_slow: 0.0
    resample_interval: 1
    robot_model_type: "nav2_amcl::DifferentialMotionModel"
    save_pose_rate: 0.5
    sigma_hit: 0.2
    tf_broadcast: true
    transform_tolerance: 1.0
    update_min_a: 0.2
    update_min_d: 0.25
    z_hit: 0.5
    z_max: 0.05
    z_rand: 0.5
    z_short: 0.05
    # 移除了无效参数 global_localization_search_size: 8.0
    # 移除了无效参数 restrict_global_search: false
    # 移除了无效参数 global_search_center_x: 0.0
    # 移除了无效参数 global_search_center_y: 0.0
    # 移除了无效参数 global_search_center_z: 0.0
    # 移除了无效参数 global_search_center_roll: 0.0
    # 移除了无效参数 global_search_center_pitch: 0.0
    # 移除了无效参数 global_search_center_yaw: 0.0
    # 移除了无效参数 global_search_resolution_x: 0.5
    # 移除了无效参数 global_search_resolution_y: 0.5
    # 移除了无效参数 global_search_resolution_z: 0.5
    # 移除了无效参数 global_search_resolution_roll: 0.1
    # 移除了无效参数 global_search_resolution_pitch: 0.1
    # 移除了无效参数 global_search_resolution_yaw: 0.1

    # 定位质量检查
    min_localization_score: 0.3        # 提高最小定位分数，避免低质量定位
    localization_check_interval: 5.0   # 降低检查频率，减少干扰
    
    # 恢复参数 - 优化跳跃问题
    enable_particle_reset_service: false  # 禁用粒子重置服务，避免突然重置
    enable_pose_reset_service: false     # 禁用位姿重置服务，保持连续性
    max_consecutive_failures: 5           # 减少最大连续失败次数
    failure_reset_delay: 5.0            # 增加失败重置延迟，避免频繁重置
    
    # 手动干预参数 - 减少干扰
    manual_pose_override: false            # 禁用手动位姿覆盖，避免人为干扰
    pose_update_timeout: 30.0            # 增加位姿更新超时时间

